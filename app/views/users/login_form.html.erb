<h2>ログインページ</h2>

  <!-- ログイン失敗時にメッセージを表示 -->
  <% if @error_maessage %>
    <%= @error_maessage %>
  <% end %>

  <%= form_tag("/login") do %>
    <p>メールアドレス</p>
    <input name="email" value="<%= @email %>">

    <p>パスワード</p>
    <input type="password" name="password" value="<%= @password %>">

    <input type="submit" name="" value="ログイン">
  <% end %>
